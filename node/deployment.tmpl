apiVersion: apps/v1
kind: Deployment
metadata:
  name: node-{{ number }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: node
      id: "{{ number }}"
  template:
    metadata:
      labels:
        app: node
        id: "{{ number }}"
    spec:
      volumes:
        - name: google-cloud-key
          secret:
            secretName: banking-key
      containers:
        - name: app
          image: europe-central2-docker.pkg.dev/{{ project_id }}/banking-repo/node-app:latest
          ports:
            - containerPort: 8080
          env:
            - name: PORT
              value: "8080"
            - name: GOOGLE_APPLICATION_CREDENTIALS
              value: /var/secrets/google/key.json
            - name: NODE_ID
              value: "{{ number }}"
          volumeMounts:
            - name: google-cloud-key
              mountPath: /var/secrets/google
        - name: paxos
          image: europe-central2-docker.pkg.dev/{{ project_id }}/banking-repo/node-paxos:latest
          ports:
            - containerPort: 8000
          env:
            - name: PORT
              value: "8000"
            - name: NODE_ID
              value: "{{ number }}"
            - name: NODES_COUNT
              value: "{{ count }}"
---
apiVersion: v1
kind: Service
metadata:
  name: node-paxos-{{ number }}
spec:
  selector:
    app: node
    id: "{{ number }}"
  ports:
    - port: 80
      targetPort: 8000
---
